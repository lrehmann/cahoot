<!-- Luke Rehmann - Full details of Study (location, time, comments) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lukerehmann.cahoot.studydetail$PlaceholderFragment">


    <TextView
        android:id="@+id/top"
        android:text="Study Group Details for: \n\t\t\t[STUDY GROUP NAME]\n"
        android:layout_width="wrap_content"
        android:textSize="20sp"

        android:layout_height="150px" />

    <TextView
        android:id="@+id/classname"
        android:textSize="20sp"

        android:text="Class: [CLASS NAME]"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@+id/top"

        />

    <TextView
        android:id="@+id/location"
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classname"
        android:textSize="16sp"

        />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/location"
        android:name="com.google.android.gms.maps.MapFragment"/>
    <!-- onclick, enlarge the size of the map -->


    <TextView
        android:id="@+id/time"
        android:paddingTop="20px"
        android:textSize="16sp"

        android:text="Time: [DATE / TIME OF EVENT]"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@+id/map"
        />

    <TextView
        android:id="@+id/comments"
        android:paddingTop="20px"
        android:textSize="16sp"
        android:text="Comments: \n[Details about this study group and any comments]"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:paddingBottom="50px"
        android:layout_below="@+id/time"
        />

    <Button
        android:id="@+id/attend"
        android:text="Check in to this Study"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:layout_below="@+id/comments"

        />
    <!-- onclick, call checkin() -->


</RelativeLayout>
