<!-- Luke Rehmann - Full details of Study (location, time, comments) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/defaultStyle"
    tools:context="com.example.lukerehmann.cahoot.studydetail$PlaceholderFragment"
>


    <TextView
        android:id="@+id/top"
        android:text="SI 543 - HW Assignment #3"

        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/location"
        android:text="Starbucks - 223 S. State St"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#ffffff"

        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Temporary Map  @drawable-hdpi/map_file.png -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/map"
        android:src="@drawable/map_gif"
        android:layout_below="@+id/comments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<!--
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_below="@+id/location"
        android:name="com.google.android.gms.maps.MapFragment"/>

    -->
    <!-- onclick, enlarge the size of the map -->


    <TextView
        android:id="@+id/time"
        android:textSize="16dp"

        android:text="3:00 - 4:00pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time"
        android:textSize="16dp"

        android:text="3:00 - 4:00pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/comments"
        android:textSize="16dp"
        android:text="I will be working on the java homework assignment. I will be sitting near the fireplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="15dp"/>

    <Button

        android:id="@+id/attend"
        android:text="Check in"
        android:layout_width="match_parent"
        android:onClick="alertButton"
        android:layout_height="65dp"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        android:background="#e4e4e4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="10dp"
        android:text="Description:"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_below="@+id/time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>


    <!-- onclick, call checkin() -->


</RelativeLayout>
