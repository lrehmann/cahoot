<!--  Mingjue Ni - University Selection Page  -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/defaultStyle"
>
    int id = item.getItemId();
    if (id == R.id.action_settings) {
    return true;
    }

    else if (id == R.id.classadder) {
    return true;
    }

    else if (id == R.id.ClassList) {
    return true;
    }

    else if (id == R.id.ClassStudies) {
    return true;
    }

    else if (id == R.id.Logout) {
    return true;
    }
    return super.onOptionsItemSelected(item);

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Name of Unversity"
        android:id="@+id/UniversitySelect"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="150dp"
        android:textSize="23dp"
        style="@style/textStyle"
        />

    <EditText
        android:layout_width="@dimen/abc_panel_menu_list_width"
        android:layout_height="50dp"
        android:id="@+id/enterDescription"
        android:layout_below="@+id/UniversitySelect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#999999"
        android:autoText="true"
        android:paddingLeft="10dp"
        android:hint="University Name"
        style="@style/textInput"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Next"
        android:id="@+id/goToClassList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="UniversitySelected"
        style="@style/buttonStyle"
        />




</RelativeLayout>
