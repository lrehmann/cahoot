<!-- Luke Rehmann - All Study Sessions for a particular class -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lukerehmann.cahoot.classstudies$PlaceholderFragment">

    <TextView
        android:id="@+id/top"
        android:text="SI 543 Study Groups\n"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/addclass"
        android:text="Create a Study Group"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"

        android:onClick="MakeStudy"
        android:layout_below="@+id/top"

        />

    <!-- for each class that the user is a part of, display a button that takes them to the studies going on for that class -->
    <Button
        android:id="@+id/class1"
        android:text="Statistics at Starbucks"
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="150px"
        android:textSize="25sp"
        android:onClick="StudyDetails"
        android:layout_below="@+id/addclass"

        />

    <Button
        android:id="@+id/class2"
        android:text="Learning Chapter 3"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:onClick="StudyDetails"
        android:layout_below="@+id/class1"

        />
    <Button
        android:id="@+id/class3"
        android:text="Small Study Group"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/class2"
        android:onClick="StudyDetails"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recently Added Study Groups"
        android:id="@+id/existingStudyGroup"
        android:layout_alignBottom="@+id/class1"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
