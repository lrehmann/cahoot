<!--  Mingjue Ni - Class Addition Page (select your classes)  -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.lukerehmann.cahoot.classadder$PlaceholderFragment"
    style="@style/defaultStyle">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add your classes:"
            android:id="@+id/ClassSelect"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="150dp"
            style="@style/textStyle"/>

        <EditText
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:id="@+id/enterDescription"
            android:layout_below="@+id/ClassSelect"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/textInput"
            android:autoText="true"
            android:paddingLeft="8dp"
            android:hint="eg. SI 543"
            android:textColor="#999999"
            />
        <Button
            android:layout_height="55dp"
            android:text="Add Class"
            android:id="@+id/classaddingbutton"
            android:layout_below="@+id/enterDescription"
            android:onClick="AddClasses"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#2E8AE6"
            android:textColor="#ffffff"/>


    <Button
        android:layout_height="65dp"
        android:text="Done!"
        android:id="@+id/goToClassList"
        android:onClick="ToClassList"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
