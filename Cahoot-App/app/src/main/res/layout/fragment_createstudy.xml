<!--Joyce Sakata -  Study Creation Page-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lukerehmann.cahoot.createstudy$PlaceholderFragment">

    <!--Add a class-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Class"
        android:id="@+id/addaclassheader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--Drop-down list of all user's classes-->

    <!--Add study location-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/addalocationheader"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/addaclassheader"
        android:layout_alignLeft="@+id/addaclassheader" />

    <!--Get GPS-->



    <!--Add a description of topic of study and location-->


    <!--Create Study Button-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/descriptionHeader"
        android:layout_toEndOf="@+id/addalocationheader"
        android:layout_below="@+id/addalocationheader"
        android:layout_alignLeft="@+id/addalocationheader"
        android:layout_alignStart="@+id/addalocationheader"
        android:layout_marginTop="69dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterClassName"
        android:layout_below="@+id/addaclassheader"
        android:layout_alignLeft="@+id/addaclassheader"
        android:layout_alignStart="@+id/addaclassheader"
        android:text="Enter class Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterDescription"
        android:layout_below="@+id/descriptionHeader"
        android:layout_alignLeft="@+id/descriptionHeader"
        android:layout_alignStart="@+id/descriptionHeader"
        android:text="Enter Description" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterLocation"
        android:layout_below="@+id/addalocationheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Enter Location" />


</RelativeLayout>
